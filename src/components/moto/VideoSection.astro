---
interface Props {
  moto: {
    marca: string;
    modelo: string;
    video?: string;
  };
  isValidYouTubeUrl: (url: string) => boolean;
  getVideoEmbedUrl: (url: string) => string | null;
}

const { moto, isValidYouTubeUrl, getVideoEmbedUrl } = Astro.props;
---

{
  moto.video && isValidYouTubeUrl(moto.video) && (
    <section class="px-4 md:px-16 lg:px-24 py-8 lg:py-12 max-w-screen-2xl mx-auto">
      <h5 class="text-dark text-xl lg:text-3xl font-semibold mb-4 lg:mb-8 text-center">
        Conoce mÃ¡s sobre {moto.marca} {moto.modelo} en este video ðŸŽ¥
      </h5>
      <div class="video-container relative w-full max-w-4xl mx-auto pt-[56.25%]">
        <iframe
          class="absolute top-0 left-0 w-full h-full"
          src={getVideoEmbedUrl(moto.video)}
          title="YouTube video player"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        />
      </div>
    </section>
  )
} 